<?xml version="1.0" encoding="UTF-8" ?>
<templates>
    <t t-name="owl.OdooServices" owl="1">
        <div t-attf-class="vh-100 {{ state.dark_theme == 'true' ? 'bg-dark' : '' }}">
            <Layout display="display">
                <div class="row">
                  <div class="col m-3">
                      <button class="btn btn-primary" t-on-click="showNotification">Notification Services</button>
                      <button class="btn btn-primary ms-2" t-on-click="showDialog">Dialog Services</button>
                      <button class="btn btn-primary ms-2" t-on-click="showEffect">Effect Services</button>
                      <button class="btn btn-primary ms-2" t-on-click="setCookieService">Cookie Services</button>
                  </div>
                </div>
            </Layout>
        </div>
    </t>

</templates>